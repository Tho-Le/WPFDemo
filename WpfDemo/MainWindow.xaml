<Window x:Class="WpfDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnHello" Content="Press Me" HorizontalAlignment="Center" Height="190" VerticalAlignment="Center" Width="342" Click="btnHello_Click"/>
        <ListBox HorizontalAlignment="Left" Height="195" Margin="57,100,0,0" VerticalAlignment="Top" Width="114">
            <ListBoxItem x:Name="listBoxBanana" Content="Banana"/>
            <ListBoxItem x:Name="listBoxApple" Content="Apple" MouseLeftButtonDown="listBoxApple_MouseLeftButtonDown" Selected="listBoxApple_Selected"/>
        </ListBox>
        <TextBlock HorizontalAlignment="Left" Height="246" Margin="612,89,0,0" Text="Hello I am a TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" FontFamily="Cambria" FontSize="16"/>
        <TextBox x:Name="txtBox" HorizontalAlignment="Left" Margin="282,354,0,0" Text="I am a textbox" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" Height="19" KeyUp="TextBox_KeyUp"/>

    </Grid>
</Window>
